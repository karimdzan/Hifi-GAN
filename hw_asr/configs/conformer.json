{
  "name": "conformer",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
      {
          "type": "Gain", 
          "args": {
            "p": 0.1, 
            "min_gain_in_db": -10.0, 
            "max_gain_in_db":  5.0
          }
        },
        {
          "type": "PitchShift", 
          "args": {
            "p": 0.2,
            "sample_rate": 16000
          }
        },
        {
          "type": "PolarityInversion", 
          "args": {
            "p": 0.2,
            "sample_rate": 16000
          }
        }
    ],
    "spectrogram": [
          {
          "type": "TimeMasking", 
          "args": {
            "p": 0.2, 
            "time_mask_param": 20
            }
          },
          {
          "type": "FrequencyMasking", 
          "args": {
            "p": 0.2, 
            "freq_mask_param": 20
            }
          }
    ]
  },
  "arch": {
    "type": "Conformer",
    "args": {
      "dim": 128,
      "num_layers": 12
    }
  },
  "data": {
    "train": {
      "batch_size": 64,
      "num_workers": 4,
      "datasets": [
        {
        "type": "LibrispeechDataset",
        "args": {
          "part": "train-clean-100",
          "max_audio_length": 20.0,
          "max_text_length": 200
        }
      },
      {
        "type": "LibrispeechDataset",
        "args": {
          "part": "train-clean-360",
          "max_audio_length": 20.0,
          "max_text_length": 200
        }
      },
      {
        "type": "LibrispeechDataset",
        "args": {
          "part": "train-other-500",
          "max_audio_length": 20.0,
          "max_text_length": 200
        }
      }
      ]
    },
    "val": {
      "batch_size": 64,
      "num_workers": 4,
      "datasets": [
        {
        "type": "LibrispeechDataset",
        "args": {
          "part": "test-clean",
          "max_audio_length": 20.0,
          "max_text_length": 200
        }
      },
      {
        "type": "LibrispeechDataset",
        "args": {
          "part": "test-other",
          "max_audio_length": 20.0,
          "max_text_length": 200
        }
      }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 5e-4,
      "betas": [0.9, 0.98],
      "eps": 1e-9
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": true
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 500,
      "epochs": 201,
      "anneal_strategy": "cos",
      "max_lr": 5e-4,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 200,
    "save_dir": "saved/",
    "save_period": 10,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 500,
    "grad_norm_clip": 10 
  }
}